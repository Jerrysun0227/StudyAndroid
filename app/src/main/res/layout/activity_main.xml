<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_follow_up"
        style="@style/CategoryButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spec_10dp"
        android:layout_marginTop="@dimen/spec_10dp"
        android:text="@string/follow_up_view"/>

    <Button
        android:id="@+id/btn_touch_event"
        style="@style/CategoryButton"
        app:layout_constraintLeft_toRightOf="@id/btn_follow_up"
        app:layout_constraintTop_toTopOf="@id/btn_follow_up"
        android:layout_marginStart="@dimen/spec_10dp"
        android:text="@string/touche_event_test"/>

    <Button
        android:id="@+id/btn_handler"
        style="@style/CategoryButton"
        app:layout_constraintLeft_toRightOf="@id/btn_touch_event"
        app:layout_constraintTop_toTopOf="@id/btn_follow_up"
        android:layout_marginStart="@dimen/spec_10dp"
        android:text="@string/handler_test"/>

</android.support.constraint.ConstraintLayout>
