<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jerrysun.studyandroid.views.followup.FollowUpView
        android:id="@+id/follow_up_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/spec_20dp"
        android:layout_marginTop="@dimen/spec_10dp"
        app:text_color="@color/color_2F3C43"
        app:text_size="@dimen/font_20sp"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="@dimen/spec_200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/follow_up_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/spec_20dp"
        android:layout_marginTop="@dimen/spec_20dp"
        android:maxLines="1"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/et_number"
        app:layout_constraintBottom_toBottomOf="@id/et_number"
        android:layout_marginStart="@dimen/spec_10dp"
        android:text="@string/follow_up_button_label"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/color_black"/>
</android.support.constraint.ConstraintLayout>